<div class="container">
 <div class="row">
  <div class="col-md-4">
   <h1>会員情報編集</h1>
   <%= form_with model: @customer, url: admin_customers_show_path, method: :patch do |f| %>
   <div>
    <label>会員ID</label>
    <%= @customer.id %>
   </div>
   <div>
    <label>氏名</label>
    <%= f.text_field :first_name %> <%= f.text_field :last_name %>
   </div>
   <div>
    <label>フリガナ</label>
    <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %>
   </div>
   <div>
    <label>郵便番号</label>
    <%= f.text_field :postal_code %>
   </div>
   <div>
    <label>住所</label>
    <%= f.text_field :address %>
   </div>
   <div>
    <label>電話番号</label>
    <%= f.text_field :telephone_number %>
   </div>
   <div>
    <label>メールアドレス</label>
    <%= f.text_field :email %>
   </div>
   <div>
    <label>会員ステータス</label>
    <%= f.radio_button :is_active, true %>有効
    <%= f.radio_button :is_active, false %>退会
   </div>
    <%= f.submit '変更を保存' %>
   <% end %>
  </div>
 </div>
</div>

