<div class="container">
 <div class="row">
  <div class="col-md-4">
    <h1>会員一覧</h1>
      <table>
       <thead>
        <tr>
         <th>会員id</th>
         <th>氏名</th>
         <th>メールアドレス</th>
         <th>ステータス</th>
        </tr>
       </thead>
       <tbody>
        <% @customer.each do |customer| %>
         <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.first_name customer.last_name, admin_customers_show_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active %></td>
         </tr>
        <% end %>
       </tbody>
      </table>
  </div>
 </div>
</div>
