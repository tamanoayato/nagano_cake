<div class="container">
 <div class="row">
  <div class="col-md-4">
   <h1>ジャンル一覧・追加</h1>
   <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <h4>ジャンル名</h4>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>

   <table class="table">
    <thead>
     <tr>
     <th>ジャンル</th>
     <th></th>
     <th></th>
     </tr>
    </thead>
    <tbody>
     <% @genres.each do |genres| %>
      <tr>
       <td><%= genres.name %></td>
       <td><%= link_to '編集する', edit_admin_genre_path(genres.id) %></td>
       </td>
      </tr>
     <% end %>
    </tbody>
    </table>
   <% end %>
  </div>
 </div>
</div>
