<div class="container">
 <div class="row">
  <div class="col-md-4">
   <h1>商品編集</h1>
   <%= form_with model: @item, url: admin_items_path, method: :patch do |f| %>
   <div>
    <label>商品画像</label>
    <%= f.file_field :image, accept: "image/*" %>
   </div>
   <div>
    <label>商品名</label>
    <%= f.text_field :name %>
   </div>
   <div>
    <label>商品説明</label>
    <%= f.text_field :introduction %>
   </div>
   <div>
    <label>ジャンル</label>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
   </div>
   <div>
    <label>税抜価格</label>
    <%= f.text_field :price %>円
   </div>
   <div>
    <label>販売ステータス</label>
    <%= f.radio_button :is_active, true %>販売中
    <%= f.radio_button :is_active, false %>販売停止中
   </div>
    <%= f.submit '更新' %>
   <% end %>
  </div>
 </div>
</div>
