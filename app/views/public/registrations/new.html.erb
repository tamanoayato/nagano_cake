<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

　<div class="field">
    <div><%= f.label '名前' %></div>
    <div>
      (姓)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      (名)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
  </div>
  
  <div class="field">
    <div><%= f.label 'フリガナ' %></div>
    <div>
      (セイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      (メイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </div>
  </div>

  <div class="field">
    <div><%= f.label 'メールアドレス' %></div>
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  
   <div class="field">
    <div><%= f.label '郵便番号(ハイフンなし)' %></div>
    <div>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>
  
   <div class="field">
    <div><%= f.label '住所' %></div>
    <div>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  </div>
  
   <div class="field">
    <div><%= f.label '電話番号(ハイフンなし)' %></div>
    <div>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>
  

  <div class="field">
    <%= f.label 'パスワード'%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード(確認用)' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
